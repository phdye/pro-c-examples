#include <stdio.h>
#include <string.h>
#include <stdlib.h>
#include <sqlca.h>
#include "varchar-util.h"

EXEC SQL INCLUDE varchar_util.pc;

EXEC SQL BEGIN DECLARE SECTION;
#define MAX 100
VARCHAR v1[MAX];
VARCHAR v2[MAX];
VARCHAR result[MAX];
EXEC SQL END DECLARE SECTION;

void print_v(const char *label, const VARCHAR *v) {
    char buffer[MAX];
    varchar_to_cstr(v, buffer, sizeof(buffer));
    printf("%s: [%.*s] (len=%d)\n", label, v->len, v->arr, v->len);
}

int main() {
    printf("=== VARCHAR UTIL TEST ===\n");

    cstr_to_varchar(" Hello ", &v1, MAX);
    cstr_to_varchar("World", &v2, MAX);

    print_v("v1", &v1);
    print_v("v2", &v2);

    // Test trim
    varchar_trim(&v1, &result, MAX);
    print_v("trim(v1)", &result);

    // Test upper
    varchar_upper(&v2, &result, MAX);
    print_v("upper(v2)", &result);

    // Test lower
    varchar_lower(&result, &result, MAX);
    print_v("lower", &result);

    // Test concat
    varchar_concat(&v1, &v2, &result, MAX);
    print_v("concat(v1, v2)", &result);

    // Test compare
    int cmp = varchar_cmp(&v1, &v2);
    printf("cmp(v1, v2) = %d\n", cmp);

    // Test icmp
    cmp = varchar_icmp(&v2, &result);
    printf("icmp(v2, result) = %d\n", cmp);

    // Test strchr
    int idx = varchar_index_char(&v2, 'o');
    printf("index of 'o' in v2 = %d\n", idx);

    // Test strstr
    cstr_to_varchar("lo", &result, MAX);
    idx = varchar_index_of(&v1, &result);
    printf("index of \"lo\" in v1 = %d\n", idx);

    // Test strdup
    VARCHAR *copy = varchar_strdup(&v2);
    if (copy) {
        print_v("strdup(v2)", copy);
        free(copy);
    }

    // Test span
    size_t span = varchar_span(&v2, "Wor");
    printf("span of v2 with 'Wor' = %zu\n", span);

    // Test cspan
    span = varchar_cspan(&v2, "ld");
    printf("cspan of v2 with 'ld' = %zu\n", span);

    // Test memset-like
    varchar_set(&result, '*', 10, MAX);
    print_v("set '*'", &result);

    // Test move
    varchar_move(&v1, &v2, MAX);
    print_v("move(v2â†’v1)", &v1);

    // Test bzero
    varchar_bzero(&v2, MAX);
    print_v("bzero(v2)", &v2);

    return 0;
}
